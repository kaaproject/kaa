<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kaaproject.www.kaanotification">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="org.kaaproject.kaa.demo.kaanotification.application.KaaNotificationApp"
        android:allowBackup="true"
        android:icon="@drawable/kaa"
        android:label="@string/app_name"
        android:theme="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <activity
            android:name="org.kaaproject.kaa.demo.kaanotification.TopicListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.kaaproject.kaa.demo.kaanotification.NotificationListActivity" />

    </application>

</manifest>
