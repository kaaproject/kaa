<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#33B5E5" />
      <stroke
          android:width="1dp"
          android:color="#2995B2" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#33B5E5"
          android:endColor="#2995B2"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2995B2" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>