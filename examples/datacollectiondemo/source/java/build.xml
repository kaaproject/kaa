<project name="DataCollectionDemo" default="debug">

    <property name="java.target" value="1.7"/>
    <property name="java.source" value="1.7"/>

    <fileset dir="lib"/>


    <property name="lib.dir" value="lib"/>
    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="debug">
        <antcall target="clean"></antcall>
        <mkdir dir="src/build/classes"/>
        <mkdir dir="src/build/jar"/>
        <javac srcdir="src" destdir="src/build/classes" classpathref="classpath" includeantruntime="false"/>
        <jar destfile="build/jar/DataCollectionDemo.jar">
            <fileset file="res/logback.xml" />
            <fileset dir="src/build/classes">
                <include name="**/*.class"/>
            </fileset>
            <manifest>
                <attribute name="Main-Class"
                           value="org.kaaproject.kaa.demo.datacollection.DataCollectionDemo"/>
            </manifest>
            <zipgroupfileset includes="*.jar" dir="lib"/>
        </jar>
    </target>
</project>
