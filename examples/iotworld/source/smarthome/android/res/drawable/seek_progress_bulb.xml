<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="line">
            <stroke
                android:width="6dp"
                android:color="@color/seek_color_normal">
            </stroke>
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="line">
                    <stroke
                        android:width="6dp"
                        android:color="@color/seek_color_normal">
                    </stroke>
                </shape>
            </item>
            <item android:id="@android:id/secondaryProgress">
                <clip>
                    <shape android:shape="line">
                        <stroke
                            android:width="6dp"
                            android:color="@color/seek_color_normal">
                        </stroke>
                    </shape>
                </clip>
            </item>
            <item android:id="@android:id/progress">
                <clip>
                    <shape android:shape="line">
                        <stroke
                            android:width="6dp"
                            android:color="@color/bulb_seek_color_activated">
                        </stroke>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
</selector>