function start()
{
    if [ -z $SERVER_HOME ]; then
        echo "This script can't be invoked standalone! Exiting..."
        exit 1
    fi

    echo "Starting $SERVER_NAME..."

        JAVA_OPTIONS="$JAVA_OPTIONS $JMX_OPTIONS"

    exec java -cp "$CONF:$LIB/*" $JAVA_OPTIONS $SERVER_MAIN_CLASS
}

start
